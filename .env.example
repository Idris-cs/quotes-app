# === SUPABASE POSTGRESQL DATABASE ===
# Format: postgresql://user:password@host:port/dbname
# For Supabase: Get from Project Settings > Database > Connection String
DATABASE_URL=postgresql://your_username:your_password@your_host:6543/postgres

# Individual database connection credentials (alternative to DATABASE_URL)
user=your_username
password=your_password
host=your_host
port=6543
dbname=postgres

# === FLASK CONFIGURATION ===
# Use 'production' for deployed environments
FLASK_ENV=production
FLASK_DEBUG=False

# Generate a random secret key for production:
# python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=generate_random_key_for_production

# === DATABASE CONNECTION RETRY SETTINGS ===
DB_CONNECT_RETRIES=5
DB_CONNECT_BASE_DELAY=1.0

# === APPLICATION SETTINGS ===
FLASK_APP=run.py
PORT=8000
